# .bash_aliases

alias md='mkdir'
alias rd='rmdir'
alias ..='cd ..'
alias ...='cd ..;cd ..'
alias ....='cd ..;cd ..;cd ..'

alias l='ls -F'
alias la='ls -FA'
alias ll='ls -Flh'
alias lll='ls -FlA'

alias a='clear'
alias aa='clear;ls -Flh'
alias clar='clear'
alias cler='clear'
alias cls='clear'

alias aptu='sudo apt-get update'
alias apti='sudo apt-get install'
alias apty='sudo apt-get install --yes'
alias aptg='sudo apt-get upgrade'
alias apts='sudo apt-cache show'

alias python='python3'
alias wl='wc -l'
